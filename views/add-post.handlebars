<div class="container parent-container-h-center">
  <div class="spinner-wrapper d-none flex-column align-items-center justify-content-center mt-5">
    <div id="spinner" class="spinner-grow text-warning d-none mt-5" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
  <form id="new-post-form" class="global-form">
    <h2>Please share your work</h2>
    <div class="form-group">
      <label for="title">Title of work</label>
      <input type="text" class="form-control" id="title" name="title">
    </div>
    <div class="form-group">
      <label for="title">Creator of work</label>
      <input type="text" class="form-control" id="title" name="artist">
    </div>
    <div class="form-group">
      <label for="dimensions">Dimensions of work</label>
      <input type="text" class="form-control" id="dimensions" name="dimensions">
    </div>
    <div class="form-group">
      <label for="description">Description of work / Artist statement</label>
      <input type="text" class="form-control" id="description" name="description">
    </div>
    <div class="form-group">
      <label for="media">Media</label>
      <input type="text" class="form-control" id="media" name="media">
    </div>
    <div class="form-group">
      <label for="work-img">JPG or PDF</label>
      <input type="file" class="form-control-file" id="work-img" name="work-img" accept="images/*" required> 
    </div>
    <button type="submit" class="btn btn-dark">Create</button>  
  </form>
</div>

<script src="/javascript/add-post.js"></script>



