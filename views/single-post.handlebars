
<div class="container">
  <h1 class="">{{post.title}}</h1>
  <img class="" src={{post.photo_url}}>
  <div>
    Posted by {{post.User.username}} on {{format_date post.createdAt}}
  </div>
  <div>
    <h2>{{post.content}}</h2>
  </div>


</div>

{{#if post.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

{{!-- {{#if post.comments.length}}
{{> comments post.comments}}
{{/if}} --}}

{{!-- only display form if user logged in --}}
{{#if loggedIn}}
<form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
{{/if}}

{{!-- only load form event listeners if user logged in and form is displayed --}}
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}