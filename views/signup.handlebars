<div class="container">
  <div class="spinner-wrapper d-none flex-column align-items-center justify-content-center mt-5">
    <div id="spinner" class="spinner-grow text-warning d-none mt-5" role="status">
      <span class="sr-only">Loading...</span>
  </div>
  </div>
  <form id="signup-form">
    <div class="form-group">
      <label for="username-signup">Username</label>
      <input type="text" class="form-control" id="username-signup" name="username" required>
    </div>
    <div class="form-group">
      <label for="email-signup">Email address</label>
      <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp" name="email" required>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="password-signup">Password</label>
      <input type="password" class="form-control" id="password-signup" name="password" required>
    </div>

    <button type="button" class="btn btn-primary" id="show-long-form">Add Additional Info?</button>

    <div id="long-form">
      <div class="form-group">
        <label for="bio">Short Bio</label>
        <input type="text" class="form-control" id="bio" name="bio">
      </div>
      <div class="form-group">
        <label for="medium">Preferred Medium</label>
        <input type="text" class="form-control" id="medium" name="medium">
      </div>
      <div class="form-group">
        <label for="interests">Interests</label>
        <input type="text" class="form-control" id="interests" name="interests">
      </div>
      <div class="form-group">
        <label for="user-img">Upload a JPG or PDF</label>
        <input type="file" class="form-control-file" id="user-img" name="user-img" accept="images/*"> 
      </div>
    </div>
    <button type="submit" class="btn btn-dark">Sign Up!</button>
  </form>
</div>{{!-- /.container --}}

<script src="/javascript/signup.js"></script>