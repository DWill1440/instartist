<div class="container">
  <form id="signup-form">
    <div class="form-group">
      <label for="username-signup">Username</label>
      <input type="text" class="form-control" id="username-signup">
    </div>
    <div class="form-group">
      <label for="email-signup">Email address</label>
      <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="password-signup">Password</label>
      <input type="password" class="form-control" id="password-signup">
    </div>

    <button type="button" class="btn btn-primary" id="button">Add Additional Info?</button>

    <div id="form2" style="display:none">
      <div class="form-group">
        <label for="bio">Short Bio</label>
        <input type="text" class="form-control" id="bio">
      </div>
      <div class="form-group">
        <label for="medium">Preferred Medium</label>
        <input type="text" class="form-control" id="medium">
      </div>
      <div class="form-group">
        <label for="interests">Interests</label>
        <input type="text" class="form-control" id="interests">
      </div>

    </div>
    <button type="submit" class="btn btn-dark">Sign Up!</button>
  </form>
</div>{{!-- /.container --}}





