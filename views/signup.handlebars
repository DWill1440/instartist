<div class="container">
  <form id="signup-form">
    <div class="form-group">
      <label for="username-signup">Username</label>
      <input type="text" class="form-control" id="username-signup" name="username" required>
    </div>
    <div class="form-group">
      <label for="email-signup">Email address</label>
      <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp" name="email" required>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="password-signup">Password</label>
      <input type="password" class="form-control" id="password-signup" name="password" required>
    </div>


    <button type="button" class="btn btn-dark" id="button">Add Additional Info</button>

    <div id="form2" style="display:none">
      <div class="form-group">
        <label for="bio">Short Bio</label>
        <input type="text" class="form-control" id="bio" name="bio">
      </div>
      <div class="form-group">
        <label for="medium">Preferred Medium</label>
        <input type="text" class="form-control" id="medium" name="medium">
      </div>
      <div class="form-group">
        <label for="interests">Interests</label>
        <input type="text" class="form-control" id="interests" name="interests">
      </div>
      {{!--  --}}
      <div class="form-group">
        <label for="user-img">Upload a JPG or PDF</label>
        <input type="file" class="form-control-file" id="user-img" name="user-img" accept="images/*"> 
      </div>
      {{!--  --}}

    </div>
    <button type="submit" class="btn btn-dark">Sign Up!</button>
    <div id="spinner" class="spinner-grow text-warning d-none" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </form>
</div>{{!-- /.container --}}

{{!-- only include front end js from this template since we don't need login functionality in the other views --}}
<script src="/javascript/signup.js"></script>