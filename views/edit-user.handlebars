<form id="udpate-form" class="card">
  <div class="card-header bg-dark text-light">
    <h3>Edit User</h3>
  </div>
  <div class="card-body">
    <div class="form-group">
      <label for="bio">Short Bio</label>
      <input type="text" class="form-control" id="bio" value="{{userMeta.bio}}">
    </div>
    <div class="form-group">
      <label for="medium">Preferred Medium</label>
      <input type="text" class="form-control" id="medium" value="{{userMeta.medium}}">
    </div>
    <div class="form-group">
      <label for="interests">Interests</label>
      <input type="text" class="form-control" id="interests" value="{{userMeta.interests}}">
    </div>
    <button type="submit" class="btn btn-primary " id="update">Update!</button>
    <button type="button" class="btn btn-danger" id="delete">Delete User</button>
  </div>
</form>
<script src="/javascript/edit-user.js"></script>
<script src="/javascript/delete-user.js"></script>